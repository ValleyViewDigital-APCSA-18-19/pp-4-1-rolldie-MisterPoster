package pp_four_one;

import java.util.*;

public class main 
{
	/*
    Name: Samuel Sparenga
    Title: 4.1
    Date: 10/17/2018
	*/   
	public static void main(String args[]) 
	{ //start of Main
    
		int sides = 0;
		
		Die mydie = new Die();
		
		Scanner kb = new Scanner(System.in);
		
		System.out.print("Choose a number of sides: ");
		sides = kb.nextInt();
		
		mydie.Die(sides);
		
		mydie.roll();
			
		System.out.println("You rolled a: " + mydie.toReturn());

	} //end of Main



	
}
